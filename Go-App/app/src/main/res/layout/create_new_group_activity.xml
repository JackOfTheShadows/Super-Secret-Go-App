<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ededed"
    tools:context="com.example.go_app.go_app.CreateNewGroupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Neue Gruppe"
        android:textColor="#387D1A"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView_create_new_group" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#387D1A"
        android:layout_below="@+id/textView_create_new_group"
        />
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_termine_about"
        android:layout_marginTop="13dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/menu_button"
        android:background="@null"/>

    <AutoCompleteTextView
        android:id="@+id/tipGroupName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginRight="18dp"
        android:background="#ffff"
        android:layout_toRightOf="@+id/textFindUser"
        android:layout_alignTop="@+id/textGroupName"
        android:layout_alignBottom="@+id/textGroupName"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:id="@+id/textGroupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gruppenname:"
        android:textSize="22dp"
        android:layout_below="@+id/line"
        android:layout_marginTop="12dp"
        />

    <TextView
        android:id="@+id/textFindUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Benutzer hinzufÃ¼gen:"
        android:textSize="22dp"
        android:layout_below="@+id/textGroupName"
        android:layout_marginTop="12dp"
        />

    <AutoCompleteTextView
        android:id="@+id/tipFindUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_marginRight="18dp"
        android:background="#ffff"
        android:layout_toRightOf="@+id/textFindUser"
        android:layout_alignTop="@+id/textFindUser"
        android:layout_alignBottom="@+id/textFindUser"
        android:layout_marginLeft="8dp"
        />

</RelativeLayout>
