<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0C0C0"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Gruppen"
        android:textColor="#387D1A"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView_groups" />

    <View
        android:id="@+id/gruenerStrich"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#387D1A"
        android:layout_below="@+id/textView_groups"
        android:layout_alignEnd="@+id/textView_groups" />
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_termine_groups"
        android:layout_marginTop="13dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/menu_button"
        android:background="@null"/>



    <TextView
        android:id="@+id/gruppePSE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PSEGruppe"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/gruenerStrich"
        android:paddingStart="25dp"
        android:padding="10dp"
        android:background="#ffff" />

    <ImageButton
        android:id="@+id/gruppen_infoButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/manager"
        android:background="@null"
        android:layout_alignTop="@+id/gruppePSE"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/gruppeKommilitonen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kommilitonen"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/gruppePSE"
        android:paddingStart="60dp"
        android:padding="10dp"
        android:background="#ffff" />

    <TextView
        android:id="@+id/lernGruppe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lern Gruppe"
        android:textSize="22dp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/gruppeKommilitonen"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:background="#ffff" />

    <ImageButton
        android:id="@+id/gruppe_erstellen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gruppenplus"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
