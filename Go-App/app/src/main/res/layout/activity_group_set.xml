<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.go_app.go_app.GroupSetActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ededed"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Teilnehmer"
        android:textColor="#387D1A"
        android:textSize="25sp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/textView_teilnehmer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#387D1A"
        android:layout_below="@+id/textView_teilnehmer"
        android:layout_alignEnd="@+id/textView_teilnehmer"
        android:id="@+id/view_teilnehmer" />
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tim Kranz"
        android:textSize="20sp"
        android:padding="10dp"
        android:id="@+id/textView3"
        android:background="#ffff"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/view_teilnehmer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mark von Eye"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:background="#ffff"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manuel Lang"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:background="#ffff"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_teilnehmer"
        android:layout_marginTop="13dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/menu_button"
        android:background="@null"/>

    <ImageButton
        android:id="@+id/gruppe_erstellen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/plus64"
        android:background="@null"
        android:layout_alignTop="@+id/delete"
        android:layout_toStartOf="@+id/delete"
        android:layout_marginEnd="73dp" />

    <ImageButton
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:maxHeight="60dp"
        android:maxWidth="60dp"
        android:scaleType="fitCenter"
        android:src="@drawable/minus"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/menu_teilnehmer"
        android:layout_marginEnd="70dp" />

</RelativeLayout>
