<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kansei.test_alarmreceiver.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set alarmReceiver"
        android:id="@+id/setAlarmReceiverButton"
        android:onClick="setAlarmReceiver"
        android:layout_above="@+id/deletReceiverButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delet receiver"
        android:id="@+id/deletReceiverButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/setAlarmReceiverButton"
        android:onClick="deletReceiver"/>

    <EditText
        android:id="@+id/textHour"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginRight="40dp"
        />

    <EditText
        android:id="@+id/textMinute"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/textHour"
        android:layout_marginRight="20dp"/>

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_above="@+id/setAlarmReceiverButton"
        android:layout_alignParentStart="true" />


</RelativeLayout>
